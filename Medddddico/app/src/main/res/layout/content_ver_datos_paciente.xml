<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pablo.medddddico.VerDatosPaciente"
    tools:showIn="@layout/activity_ver_datos_paciente">


    <EditText
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="dni"
        android:enabled="false"
        android:id="@+id/MostrarDNI"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/MostrarApellidos"
        android:layout_alignEnd="@+id/MostrarApellidos" />

    <EditText
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:enabled="false"
        android:text="apell"
        android:id="@+id/MostrarApellidos"
        android:layout_below="@+id/MostrarDNI"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:enabled="false"
        android:text="nombre"
        android:id="@+id/MostrarNombre"
        android:layout_below="@+id/MostrarApellidos"
        android:layout_alignRight="@+id/MostrarPass"
        android:layout_alignEnd="@+id/MostrarPass" />

    <EditText
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:enabled="false"
        android:text="nombre Médico"
        android:id="@+id/MostrarNombreMedico"
        android:layout_below="@+id/textViewNombreMedico"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MostrarPass"
        android:enabled="false"
        android:textSize="20dp"
        android:hint="Password"
        android:layout_below="@+id/textViewPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI:"
        android:textSize="20dp"
        android:id="@+id/TextViewDNI"
        android:layout_alignTop="@+id/MostrarDNI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:id="@+id/textViewApellidos"
        android:layout_below="@+id/MostrarDNI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/MostrarNombre" />

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:id="@+id/textViewPass"
        android:layout_below="@+id/MostrarNombreMedico"
        android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:id="@+id/textViewNombre"
        android:layout_below="@+id/textViewApellidos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/MostrarNombre" />

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Médico:"
        android:id="@+id/textViewNombreMedico"
        android:layout_below="@+id/textViewNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio de Contraseña"
        android:id="@+id/BotonCambioContraseña"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/MostrarPass"
        android:layout_toLeftOf="@+id/MostrarNombre"
        android:layout_toStartOf="@+id/MostrarNombre" />

</RelativeLayout>